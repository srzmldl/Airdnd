<% if @user.errors.any? %>
    <div id="error_explanation">
        <h2> <%= pluralize(@user.errors.count, "error") %>
            使得注册失败:</h2>
        <p>下面这些域有问题:</p>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>