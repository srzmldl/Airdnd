<header>
    <% logo = image_tag("logoFinal.jpg", :alt => "Sample App", :class => "round") %>
    <%= link_to logo, home_path %>
    <nav class="round">
        <ul>
            <li><%= link_to "Home", home_path %></li>
            <% if signed_in? %>
                <% if current_user != nil && current_user.admin? %>
                    <li><%= link_to "Users", users_path %></li>
                <% end %>
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Setting", edit_user_path(current_user) %></li>
            <% end %>
            <li><%= link_to "Signup", signup_path %></li>
            <% if signed_in? %>
                <li><%= link_to "Signout", signout_path, :method => :delete, :confirm => "Are you sure?" %> </li>
            <% else %>
                <li><%= link_to "Signin", signin_path %></li>
            <% end %>
        </ul>
    </nav>
</header>


