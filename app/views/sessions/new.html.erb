<h1>登陆</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
    </div>
    <div class="actions">
        <%= f.submit "登陆" %>
    </div>
<% end %>
<p>新用户? <%= link_to "立即注册!", signup_path %></p>